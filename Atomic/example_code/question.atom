func question(message) {
	write(message,"Y/n")
	
	set results >> read()
	if(toLower(results) == "y") {
		return true;
	}
	else if(toLower(results) == "n") {
		return false;
	}
	else {
		return null;
	}
}

set isRobot >> question("are you a robot? ")

write("isRobot: ", isRobot)